<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.teamplus.mvc.dao.UsersMapper">

    <!-- UserNO 만들기 위한 시퀀스 추출-->
    <select id="getSequence" resultType="int">
        select
            userNo_seq.nextval
        from dual
    </select>

    <!-- ID 중복확인 파라미터로 전달한 ID가 이미 존재하면 1 반환/ 아니면 0 반환-->
    <select id="isIdExist" resultType="int">
        select count(*)
        from Users
        where
            Id=#{id}
    </select>

    <!-- Email 중복확인 파라미터로 전달한 Email가 이미 존재하면 1 반환/ 아니면 0 반환-->
    <select id="isEmailExist" resultType="int">
        select count(*)
        from Users
        where
            Email=#{email}
    </select>

    <!-- NickName 중복확인 파라미터로 전달한 NickName가 이미 존재하면 1 반환/ 아니면 0 반환-->
    <select id="isNicknameExist" resultType="int">
        select count(*)
        from Users
        where
             NickName=#{nickName}
    </select>

    <!-- 회원가입 insert문(register, signup, join)-->
    <insert id="signUp">
        insert
        into Users
        values(#{userNo},#{id},#{password},#{name},#{nickName})
    </insert>

    <!-- 회원정보 수정(닉네임) update 문-->
    <update id="changeNickName">
        update Users
        set
            NickName=#{nickname}
        where
            UserNo=#{userNO}
    </update>
    <!-- 회원탈퇴 delete문 -->
    <delete id="delete">
        delete from Users
        where
            UserNo=#{userNo}
    </delete>

    <!-- 전체 회원 조회 -->
    <select id="selectAll">
        select * from Users
    </select>

    <!-- userNo으로 회원 조회-->
    <select id="selectOne" resultType="UsersDTO">
        select * from Users
        where
            UserNO=#{userNO}
    </select>

    <!-- 이름과 email로 아이디 찾기-->
    <select id="findId" resultType="UsersDTO">
        select *
        from Users
        where
            Name=#{name} AND Email=#{email}
    </select>

    <!-- 비밀번호 재설정(비밀번호 까먹었을 때, 로그인 안된 상태) -->
    <!-- id랑 email 입력해서 일치하는 정보 뽑기-->
    <update id="changePassword">
        update Users
        set Password=#{password}
        where
            Id=#{id} AND Email=#{email}
    </update>
</mapper>