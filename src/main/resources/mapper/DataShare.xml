<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.teamplus.mvc.dao.DataShareMapper">

    <!-- 파일 공유 번호 시퀀스 -->
    <select id="getSequence" resultType="int">
        SELECT shareNo_seq.nextval
        FROM dual
    </select>

    <!-- 파일 공유글 작성 -->
    <insert id="write" parameterType="DataShareDTO">
        INSERT INTO
            dataShare (shareNo,projectNo,userNo,content,dataURL)
        values (#{shareNo},#{projectNo},#{userNo},#{content},#{dataURL})
    </insert>

    <!-- 파일 공유글 리스트 [출력] -->
    <select id="selectList" parameterType="String" resultType="DataShareDTO">
        SELECT *
        FROM dataShare
        WHERE projectNo=#{projectNo}
        ORDER BY regDate DESC
    </select>

</mapper>