<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.teamplus.mvc.dao.SubCommentsMapper">
    <!-- 대댓글 등록 (insert문) -->
    <insert id="insert">
        insert
        into
            SubComments(SubCommentNo,UserNO,CommentNO,SubContent)
        values(subCommentNo_seq.nextval,#{userNO},#{commentNo},#{subContent})
    </insert>

    <!-- 전체 대댓글 조회 (select * )-->
    <select id="selectAll" resultType="SubCommentsDTO">
        select *
        from SubComments
    </select>

    <!-- 댓글에 대한 대댓글 조회 (select * where commentNO) -->
    <select id="selectByCommentNo" resultType="SubCommentsDTO">
        select *
        from SubComments
        where CommentNo=#{commentNO}
    </select>



</mapper>