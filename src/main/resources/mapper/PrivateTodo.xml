<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.teamplus.mvc.dao.PrivateTodoMapper">

    <!-- 개인 - 할 일 리스트 시퀀스 -->
    <select id="getSequence" resultType="int">
        SELECT userTodoNo_seq.nextval
        FROM dual
    </select>

    <!-- 개인 - 할 일 리스트 [작성] -->
    <insert id="write" parameterType="PrivateTodoDTO">
        INSERT INTO
            privateTodo (todoNo,userNo,title,description,todoDate)
        VALUES (#{todoNo},#{userNo},#{title},#{description},#{todoDate})
    </insert>

    <!-- 개인 - 할 일 리스트 [출력] -->
    <select id="selectList" parameterType="String" resultType="PrivateTodoDTO">
        SELECT *
        FROM privateTodo
        WHERE userNo=#{userNo}
        ORDER BY todoDate
    </select>

    <!-- 개인 - 할 일 리스트 [삭제] -->
    <delete id="delete" parameterType="String">
        DELETE FROM
            privateTodo
        WHERE todoNo=#{todoNo}
    </delete>

    <!-- 개인 - 할 일 리스트 [수정] -->
    <update id="update" parameterType="PrivateTodoDTO">
        UPDATE PrivateTodo
        SET title=#{title},description=#{description},status=#{status}
        WHERE todoNo=#{todoNo}
    </update>

    <!-- 개인 - 할 일 리스트 [진행상태 설정]
    ( 파라미터 타입 : Map<String,Object> )
    예시)
    Map<String,Objec> map = new HashMap<>();
    map.put("status",1);
    map.put("todoNo","user_1");
    setStatus(map);
    -->
    <update id="setStatus">
        update TeamTodo
        set
            status=#{status}
        where
            TodoNo=#{todoNO}
    </update>

    <!-- 개인 - 할 일 리스트 [진행여부 : 완료 설정] -->
    <!-- 시작전 : 0(시작전) / 완료 : 1 / 진행중 : 2 / new : 3로 기준 -->
    <update id="setComplete">
        update PrivateTodo
        set
            endDate=sysdate,
            status=1
        where
            todoNo=#{todoNO}
    </update>
</mapper>