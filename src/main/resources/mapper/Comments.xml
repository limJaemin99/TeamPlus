<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.teamplus.mvc.dao.CommentsMapper">

    <!-- 댓글 작성 -->
    <insert id="write" parameterType="CommentsDTO">
        INSERT INTO
            comments (commentNo,todoNo,userNo,content)
        VALUES (commentNo_seq.nextval,#{todoNo},#{userNo},#{content})
    </insert>

    <!-- 댓글 리스트 [출력] -->
    <select id="selectList" parameterType="String" resultType="CommentsDTO">
        SELECT *
        FROM comments
        WHERE todoNo=#{todoNo}
        ORDER BY regDate DESC
    </select>

</mapper>